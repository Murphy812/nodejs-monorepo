{
  "name": "FirebaseHttpApi",
  "connector": "rest",
  "baseURL": "https://fcm.googleapis.com/fcm/send",
  "options": {
    "headers": {
      "accept": "application/json",
      "content-type": "application/json",
      "authorization": "key=<...>"
    }
  },
  "crud": false,
  "operations": [
    {
      "template": {
        "method": "POST",
        "url": "https://fcm.googleapis.com/fcm/send",
        "body": {
          "to": "{recipient}",
          "notification": {
            "body": "{body}",
            "title": "{title}"
          }
        }
      },
      "functions": {
        "send": ["recipient", "title", "body"]
      }
    }
  ]
}
