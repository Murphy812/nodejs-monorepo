{
  "name": "alice-qr-lib",
  "version": "1.0.0",
  "description": "Utilities for QR code content generation and parsing",
  "main": "lib/",
  "typings": "lib/qr",
  "files": [
    "lib/"
  ],
  "scripts": {
    "deps": "yarn install",
    "build": "tsc",
    "start": "yarn run build && forever start ./dist/main.js",
    "stop": "forever stop ./dist/main.js",
    "test": "mocha",
    "coverage:test": "nyc --cwd=.. --temp-dir=alice-qr-lib/.nyc_output mocha",
    "coverage:merge": "nyc merge .nyc_output ../../.nyc_output/alice-qr-lib.coverage.json",
    "lint": "yarn run prettier:check && yarn run tslint",
    "lint:fix": "yarn run tslint:fix && yarn run prettier:fix",
    "prettier:cli": "prettier --ignore-path=../../.prettierignore  \"**/*.ts\"",
    "prettier:check": "yarn run prettier:cli -l",
    "prettier:fix": "yarn run prettier:cli --write",
    "tslint": "lb-tslint -c ../../tslint.json",
    "tslint:fix": "yarn run tslint --fix"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/basic-auth": "^1.1.1",
    "@types/body-parser": "^1.16.3",
    "@types/express": "^4.0.36",
    "@types/md5": "^2.1.32",
    "@types/node": "7.0.12",
    "@types/request": "^2.0.0",
    "@types/request-promise": "^4.1.36",
    "basic-auth": "^1.1.0",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "forever": "^0.15.3",
    "md5": "^2.2.1",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "typescript-map": "0.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "chai": "^4.0.2"
  }
}
