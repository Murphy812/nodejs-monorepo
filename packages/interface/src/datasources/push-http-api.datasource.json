{
  "name": "PushHttpApi",
  "connector": "rest",
  "baseURL": "http://push/",
  "options": {
    "headers": {
      "accept": "application/json",
      "content-type": "application/json"
    }
  },
  "crud": false,
  "operations": [
    {
      "template": {
        "method": "POST",
        "url": "http://push/send_notification/{recipient}",
        "body": "{notification}"
      },
      "functions": {
        "send": ["recipient", "notification"]
      }
    }
  ]
}
