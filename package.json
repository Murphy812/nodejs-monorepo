{
  "name": "sr2020-nodejs",
  "version": "1.0.2",
  "description": "Monorepo for SR2020 parts written in NodeJS",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "find . -type f ( -name *.js -or -name *.map -or -name *.d.ts -or -name *.tsbuildinfo ) -not -path '*node_modules*' -print -delete",
    "build:watch": "tsc -b --watch",
    "test": "lerna run test --concurrency=1 --stream",
    "coverage:coveralls": "nyc report --reporter=text-lcov | npx coveralls",
    "coverage:codecov": "npx codecov .nyc_output/"
  },
  "repository": {
    "type": "git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@loopback/boot": "^1.7.4",
    "@loopback/context": "^2.1.1",
    "@loopback/core": "^1.12.4",
    "@loopback/openapi-v3": "^2.0.0",
    "@loopback/repository": "^1.19.1",
    "@loopback/rest": "^2.0.0",
    "@loopback/rest-explorer": "^1.4.10",
    "@loopback/service-proxy": "^1.3.17",
    "@types/dotenv": "^6.1.1",
    "@types/nock": "^10.0.3",
    "dotenv": "^8.0.0",
    "loopback-connector-postgresql": "^3.7.0",
    "loopback-connector-rest": "^3.4.1",
    "loopback-connector-sqlite3": "^3.0.0",
    "nock": "^10.0.6",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@loopback/build": "2.0.16",
    "@loopback/eslint-config": "^5.0.3",
    "@loopback/testlab": "^1.2.6",
    "@types/node": "^10.11.2",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "codecov": "^3.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-eslint-plugin": "^2.2.1",
    "eslint-plugin-mocha": "^6.2.2",
    "lerna": "^3.1.4",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.7.5"
  }
}
