{
  "name": "sr2020-nodejs",
  "version": "1.0.2",
  "description": "Monorepo for SR2020 parts written in NodeJS",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "find . -type f ( -name *.js -or -name *.map -or -name *.d.ts -or -name *.tsbuildinfo ) -not -path '*node_modules*' -print -delete",
    "build:watch": "tsc -b --watch",
    "test": "lerna run test --concurrency=1 --stream",
    "coverage:coveralls": "nyc report --reporter=text-lcov | npx coveralls",
    "coverage:codecov": "npx codecov .nyc_output/",
    "presubmit": "lerna run lint && yarn build && lerna run test"
  },
  "repository": {
    "type": "git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@loopback/boot": "^2.0.1",
    "@loopback/context": "^3.1.0",
    "@loopback/core": "^2.1.0",
    "@loopback/openapi-v3": "^3.1.0",
    "@loopback/repository": "^2.0.1",
    "@loopback/rest": "^6.2.0",
    "@loopback/rest-explorer": "^2.0.1",
    "@loopback/service-proxy": "^2.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/nock": "^10.0.3",
    "@types/winston": "^2.4.4",
    "dotenv": "^8.0.0",
    "loopback-connector-postgresql": "^5.1.0",
    "loopback-connector-rest": "^3.6.0",
    "loopback-connector-sqlite3": "^3.0.0",
    "moment": "^2.24.0",
    "nock": "^10.0.6",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.18",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@loopback/build": "^6.2.2",
    "@loopback/eslint-config": "^6.0.1",
    "@loopback/testlab": "^3.2.4",
    "@types/node": "^10.11.2",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "codecov": "^3.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-eslint-plugin": "^2.2.1",
    "eslint-plugin-mocha": "^6.2.2",
    "lerna": "^3.1.4",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "typescript": "^4.0.2"
  }
}
