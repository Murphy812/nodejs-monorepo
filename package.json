{
  "name": "sr2020-nodejs",
  "version": "1.0.2",
  "description": "Monorepo for SR2020 parts written in NodeJS",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "find . -type f ( -name *.js -or -name *.map -or -name *.d.ts -or -name *.tsbuildinfo ) -not -path '*node_modules*' -delete",
    "build:watch": "tsc -b --watch"
  },
  "repository": {
    "type": "git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@loopback/boot": "^1.2.4",
    "@loopback/context": "^1.12.1",
    "@loopback/core": "^1.6.1",
    "@loopback/openapi-v3": "^1.3.8",
    "@loopback/repository": "^1.5.2",
    "@loopback/rest": "^1.10.5",
    "@loopback/rest-explorer": "^1.1.19",
    "@loopback/service-proxy": "^1.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/nock": "^10.0.3",
    "dotenv": "^8.0.0",
    "loopback-connector-mysql": "^5.4.0",
    "loopback-connector-rest": "^3.4.1",
    "loopback-connector-sqlite3": "^3.0.0",
    "nock": "^10.0.6",
    "tsconfig-paths": "^3.8.0"
  },
  "devDependencies": {
    "@loopback/build": "^1.5.1",
    "@loopback/testlab": "^1.2.6",
    "@loopback/tslint-config": "^2.0.4",
    "@types/node": "^10.11.2",
    "lerna": "^3.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.15.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.5.1"
  }
}
